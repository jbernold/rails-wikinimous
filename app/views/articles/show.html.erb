<article>
  <h1>
    <%= @article.title %>
    <small>
      <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_article_path(@article)  %>
      <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, article_path(@article), method: "delete", data: { confirm: "Are you sure?" } %></i>
    </small>
  </h1>

  <hr>
  <p><%= @article.content  %></p>

</article>
